[module/date]
type = internal/date
interval = 1.0

date = %a,%d %b
time = %H:%M
date-alt = %Y-%m-%d%
time-alt = %H:%M:%S

label =  %time% |  %date%
format-foreground = ${colors.foreground}


[module/battery]
